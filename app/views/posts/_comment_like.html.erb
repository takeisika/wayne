

<% if Likecomment.find_by(user_id: @current_user.id, comment_id: comment.id) %>
<object><%= link_to("/likecomments/#{comment.id}/destroy",method: :post,remote: true) do %>
  <span class="fa fa-heart like-btn-unlike fa-xs"><%=Likecomment.where(comment_id:comment.id).count%></span>
<% end %></object>
<% else %>
<object><%= link_to("/likecomments/#{comment.id}/create", method: :post,remote: true) do %>
  <span class="fa fa-heart like-btn fa-xs"><%=Likecomment.where(comment_id:comment.id).count%></span>
<% end %></object>
<% end %>